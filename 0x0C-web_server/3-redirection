#Install Nginx web server (assuming you haven't installed it yet)

#!/bin/bash
sudo apt update
sudo apt install nginx -y


#Create a configuration file for the redirection:
#!/bin/bash
sudo tee /etc/nginx/conf.d/redirect.conf > /dev/null <<EOT
server {
    listen 80;
    server_name example.com;

    location /redirect_me {
        return 301 http://https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;
    }

    # Include other Nginx configuration directives if needed
}
EOT


#Test the Nginx configuration:
#!/bin/bash
sudo nginx -t


#If the test is successful, restart Nginx to apply the changes:
#!/bin/bash
sudo service nginx restart
